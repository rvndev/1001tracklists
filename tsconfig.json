{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6"
    ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src",
    "test"
  ],
}